        </form>
        <form action="/user/login" method="post" style="margin: 10px; padding: 0; width: 150px;">
            <input type="email" name="email" value="stan@gmail.com" style="display: none;">
            <input type="password" name="senha" value="123" style="display: none;">
            <button type="submit">Stan</button>
        </form>
